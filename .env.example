# Example configuration for local development
# IMPORTANT: keep all variable names uppercase
GLPI_BASE_URL=https://seu-endpoint/apirest.php
GLPI_APP_TOKEN=<token_app>
GLPI_USERNAME=<username>
GLPI_PASSWORD=<password>
GLPI_USER_TOKEN=<token_usuario>
VERIFY_SSL=true
CLIENT_TIMEOUT_SECONDS=30
LOG_LEVEL=INFO
KNOWLEDGE_BASE_FILE=docs/knowledge_base_errors.md
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glpi_dashboard
DB_USER=user  # application user (non-privileged)
DB_PASSWORD=password
POSTGRES_DB=glpi_dashboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://user:password@localhost:5432/glpi_dashboard
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
REDIS_TTL_SECONDS=3600
CACHE_TYPE=RedisCache
CACHE_REDIS_HOST=redis
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=1
CACHE_DEFAULT_TIMEOUT=300
CODEGPT_PLUS_API_KEY=<your_codegpt_plus_api_key>
# Uncomment to enable LangSmith tracing
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=<your_langsmith_key>
# LANGCHAIN_PROJECT=glpi-dashboard
# IP filtering has been removed; use a reverse proxy if needed
# HTTP_PROXY=http://user:pass@proxy.company.com:8080
# HTTPS_PROXY=http://user:pass@proxy.company.com:8080
# OFFLINE_INSTALL=true
# PLAYWRIGHT_BROWSERS_PATH=~/.cache/ms-playwright
# SKIP_PLAYWRIGHT=true
# PLAYWRIGHT_DOWNLOAD_HOST=http://artifactory.local/playwright
DASH_PORT=8050
