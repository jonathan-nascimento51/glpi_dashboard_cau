{
  "terminal.integrated.allowChords": false,

  // ▼ IA / extensões ----------------------------------------------------------
   "github.copilot.enable": { "*": true, "plaintext": false, "json": false },
  "geminicodeassist.rules": "Gere testes unitários com pytest, use TypeScript e React com hooks, trate exceções com try-catch.",
  "geminicodeassist.customCommands": {
    "/create-glpi-hook": "Crie um hook React Query para a API GLPI.",
    "/document-glpi-endpoint": "Documente função que interage com API GLPI."
  },

  // ▼ Python ------------------------------------------------------------------
  "python.testing.pytestArgs": ["test"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.extraPaths": ["./src"],

  // ▼ Ortografia --------------------------------------------------------------
  "cSpell.words": [
    "aqui", "autouse", "creds", "Estrutura", "excinfo",
    "GLPI", "GLPIAPI", "healthcheck", "initdb", "isready",
    "itemtype", "opcional", "pode", "PYTHONPATH", "retryable",
    "sobrescrever", "uvicorn", "venv", "você"
  ],

  // ▼ YAML (necessita extensão Red Hat YAML) ----------------------------------
  "yaml.validation": true,
  "yaml.customTags": ["expression", "secrets"],
  "yaml.lint.unusedAnchor": "ignore",
  "yaml.lint.duplicateKey": "warning",
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json":
      ".github/workflows/*.yml"
  },

  // ▼ Sourcery – ignorar libs de terceiros ------------------------------------
  "sourcery.disabledForDirectories": [
    "**/site-packages/**",
    "**/venv/**",
    "**/.venv/**"
  ],

  // ▼ Outros ------------------------------------------------------------------
  "docwriter.style": "Auto-detect",
  "makefile.makefilePath": "Makefile",
  "wolf.disableHotModeWarning": true
}
