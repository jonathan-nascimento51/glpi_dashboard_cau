{
  "compilerOptions": {
    "target": "ESNext",                      // alvos modernos
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",                      // novo JSX runtime
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",           // seu código React
    "src/**/*.d.ts"  // declarações de módulos (CSS, imagens...)
  ]
}
