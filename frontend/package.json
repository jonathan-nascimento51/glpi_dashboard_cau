{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    // start Next.js with Turbopack for live reload
    "dev": "next dev --turbopack",
    // create an optimized production build
    "build": "next build",
    // check code quality via ESLint
    "lint": "next lint",
    // format files using Prettier
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    // run unit tests with Jest
    "test": "jest",
    // open Storybook interface for components
    "storybook": "storybook dev -p 6006",
    // interactive commits with Commitizen
    "cz": "git-cz",
    // start compiled app in production mode
    "start": "next start"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "^15.3.4"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.3.4",
    "@eslint/eslintrc": "^3",
    "prettier": "^3",
    "jest": "^29",
    "@storybook/react": "^7",
    "commitizen": "^4"
  }
}
